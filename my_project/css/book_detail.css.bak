/*主体部分*/
.main:after,
.book_show:after{
    content:"";
    display:block;
    clear:both;
}
.main{
    width:1200px;
    margin:30px auto;
    /*border:1px solid red;*/
}
/*图片展示*/
.book_show{
    width:100%;
}
/*图片展示右边*/
.book_show .book-img{
    width:100px;
    margin-left:125px;
    margin-top:5px;
    padding:10px;
    border:10px solid #ccc;
}
.book_show .book-img>img{
    max-width:100%;
}
/*图片展示左边*/
.book_show .book-intr{
    margin-left:50px;
    width:750px;
}
.book_show .book-intr p{
    margin-top:10px;
}
.book-intr .content{
    font-size:14px;
    text-align: justify;
    margin-left:10px;
}
.progress-bar{
    display:inline-block;
    width:200px;
    height:10px;
    border:1px solid black;
    border-radius:10px;
    position:relative;
}
.progress{
    display:inline-block;
    width:140px;
    height:10px;
    background-color:#D9EDF7;
    border-radius:10px;
    position:absolute;
}
span.zan{
    margin-left:200px;
    cursor:pointer;
    color:#ccc;
}
.glyphicon-thumbs-up:before {
    content: "\e125";
}
/*评论区*/
.book_comment{
    width:1200px;
    /*border:1px solid #ccc;*/
    margin-top:20px;
}
.comment_header{
    width:1172px;
    padding:10px;
    font-size:14px;
    background-color:#F6F8FE;
    border:4px solid #C3DFEA;
}
.comment_header>b{
    padding:5px 5px 5px 5px;
    margin-right:10px;
    height:20px;
    border-radius: 10px;
    background-color:#6f78a7;
}
.comment_header>h3{
    display:inline-block;
}
.coment_editor{
    border:1px solid red;
    margin-top:20px;
}
.tx_lg{
    width:100px;
    height:100px;
    border:1px solid #ccc;
    margin:10px 20px 10px 20px;
    border-radius: 50%;
}
.tx_lg>img{
    width:100px;
    height:100px;
    border-radius: 50%;
}
.comment_write>textarea{
    width:1030px;
    height:77px;
    resize: none;
    border:1px solid #ccc;
    font-size:14px;
    padding:10px;
    color:#8c8c8c;
    margin-top:10px;
}
.comment_write>input{
    width:160px;
    height:35px;
    font-size:15px;
    background-color:#eee;
    outline:none;
    border:0;
    margin:5px 20px 20px 20px;
}
.comment_title{
    float:left;
    list-style:none;
    padding:10px;
    font-size:15px;
    min-width:98%;
}
.comment_title>li{
    float:left;
}
.comment_title>li>a{
    float:left;
    padding:5px 15px;
    text-decoration:none;
    color:#999;
    font-weight:bold;
}
.comment_title>li.active{
    border-bottom:2px solid #FF6600;
}
.comment_title>li.active>a{
    color:#FF6600;
}
.tab_body{
    margin-top:40px;
    border:1px solid #ccc;
}
.person{
    border-top:2px solid #ccc;
    padding:10px;
}
.left_side{
    width:80%;
}
.left_side>span{
    color:#9D9D9D;
    margin-bottom:10px;
}
.left_side>span>a{
    display:inline-block;
    margin-right:10px;
    text-decoration:none;
    color:#9D9D9D;
}
.left_side>span>b{
    margin-right:10px;
}
.tx_sm{
    width:80px;
    height:80px;
    border-radius:50%;
    margin-right:30px;
    margin-left:30px;
}
.tx_sm>img{
    width:80px;
    height:80px;
    border-radius:50%;
}
.person>.left>p{
    margin-top:5px;
    color:#999;
}
.person_name{
    font-size:16px;
}
.person_content{
    font-size:18px;
}
.tab_body:after,
.comment_title:after,
.comment_editor:after,
.person:after{
    display:block;
    content:"";
    clear:both;
}
.more>button{
	width:100%;
    /*margin-top:5px;*/
    /*margin-left:5px;*/
    padding:20px 0;
    /*border:0;*/
    outline:none;
    background:#fff;
    font-size:14px;
    color:#999;
    /*border-top:1px solid #999;*/
}
.more>button:hover{
    color:#FF6600;
}
